generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Agent {
  id          String   @id @default(uuid())
  name        String
  description String
  traits      String
  expertise   String
  tone        String   @default("professional")
  language    String   @default("English")
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  meetings    Meeting[] @relation("MeetingAgents")
}

model Meeting {
  id          String   @id @default(uuid())
  title       String
  topic       String
  description String?
  status      String   @default("pending") // pending, active, completed
  agents      Agent[]  @relation("MeetingAgents")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
